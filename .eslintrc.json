{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
      "indent": ["error", 2],
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "brace-style": ["error", "1tbs"],
      "space-infix-ops": "error",
      "id-length": "error",
      "camelcase": [
        "error",
        {
          "allow": [
            "id_usuario",
            "cliente_id",
            "id_tabela",
            "id_select",
            "log_data",
            "not_update_token",
            "URL_storage"
          ]
        }
      ],
      "eqeqeq": "error",
      "keyword-spacing": "error",
      "func-style": "error",
      "prefer-arrow-callback": "error",
      "no-unneeded-ternary": "error",
      "no-var": "error",
      "prefer-const": "error",
      "one-var": ["error", "never"],
      "no-new-object": "error",
      "no-array-constructor": "error",
      "array-element-newline": ["error", "consistent", {"minItems": 4}],
      "array-bracket-newline": ["error", {"minItems": 4}],
      "function-paren-newline": ["error", {"minItems": 4}],
      "newline-per-chained-call": "error"
    }
  }
  